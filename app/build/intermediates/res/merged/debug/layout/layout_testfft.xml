<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/testFftText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="25sp"
	        android:layout_margin="10dp"
	        android:layout_gravity="center"
	        android:text="@string/TestFFT" />
    
	    <LinearLayout 
	        android:orientation="vertical"
	        android:background="#bdbdbd"
	        android:layout_margin="10dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
   	        <TextView
	            android:layout_gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Speed Test" />
	        
	        <TextView
	            android:layout_gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/test_rand" />
	        
	        <EditText android:id="@+id/windowSize"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:maxLength="5"
	       		android:inputType="number"
	       		android:hint="Input Size"
	       		android:text="882" />
	        
	       	<Button 
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="Run Test"
	        	android:onClick="randomTest" />
	            
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:orientation="vertical"
	        android:background="#bdbdbd"
	        android:layout_margin="10dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	       	
			<TextView
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Accuracy Test" />	        
				
			<TextView
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/test_static" />
	        
			<Button 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Run Test"
				android:onClick="staticTest" />
	        
	    </LinearLayout>
	    
    </LinearLayout>

</ScrollView>


