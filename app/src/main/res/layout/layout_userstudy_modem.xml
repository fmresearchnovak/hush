<LinearLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/ll_up"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical" >
       
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_margin="10dp"
        android:text="In this test we will generate an audio signal carrying some random message using our ultrasonic modem.  When the transmission is over, if you heard anything, please adjust the slider accordingly and begin the next test." />
   
    <Button android:id="@+id/testButt"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:onClick="startModem" />
    

    <TextView android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="" />

    <SeekBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
 
	    <TextView android:id="@+id/silent"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="5dp"
	        android:textSize="12sp"
	        android:text="Silence" />
	    
	    <TextView android:id="@+id/middle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="5dp"
	        android:gravity="center"
	        android:textSize="12sp"
	        android:text="Comfortable Music" />
    
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="5dp"
	        android:gravity="right"
	        android:textSize="12sp"
	        android:text="Fire Alarm" />
    </LinearLayout>
        
</LinearLayout>
   
