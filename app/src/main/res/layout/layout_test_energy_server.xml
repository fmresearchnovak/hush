<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="20dp"
	        android:gravity="center"
	        android:textSize="14sp"
	        android:text="This server listens for connections from another device running an energy test.  The current status is displayed below." />
	    
	   	<Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:textSize="12sp"
	        android:text="Clear Logs"
	        android:onClick="clearStatus" />
	    
	    
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
	        
	        <TextView android:id="@+id/dataServerStatus"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:layout_margin="20dp"
	        	android:gravity="left"
	        	android:textSize="12sp"
	        	android:text="Initializing Data..." />
	        
	        <TextView android:id="@+id/btServerStatus"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:layout_margin="20dp"
	        	android:gravity="left"
	        	android:textSize="12sp"
	        	android:text="Initializing BT..." />
	        
	    </LinearLayout>
	    
	    
    </LinearLayout>
    
    
</ScrollView>